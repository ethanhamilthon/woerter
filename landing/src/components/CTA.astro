---
interface Props {
  title: string;
  desc1: string;
  button: string;
}

const { title, desc1, button } = Astro.props;
---

<section class="container flex flex-col items-center gap-16 py-12">
  <div class="flex flex-col items-center gap-4">
    <h3 class="text-balance text-center text-xl font-bold text-zinc-700">
      {title}
    </h3>
    <span class="text-balance text-center font-light text-sm text-zinc-600"
      >{desc1}
    </span>
  </div>
  <a
    href="/app/"
    class="px-6 py-3 bg-violet-500 font-bold text-white rounded-lg">{button}</a
  >
</section>
