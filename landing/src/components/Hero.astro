---
interface Props {
  login: string;
  try: string;
}
const { login, try: trying } = Astro.props;
---

<main
  class="container flex items-center flex-col gap-6 justify-center bgradient py-12 sm:py-24"
>
  <slot />
  <div class="flex gap-4">
    <a
      href="/app/"
      class="py-2 px-4 bg-zinc-100 text-zinc-600 border border-zinc-200 rounded-lg hover:bg-zinc-200 duration-150"
    >
      {login}
    </a>
    <a
      href="/app/"
      class="py-2 px-4 bg-violet-600 text-white border border-purple-200 rounded-lg hover:bg-violet-700 duration-150"
    >
      {trying}
    </a>
  </div>
  <img
    src="/hero.jpg"
    class="w-full px-4 sm:w-4/5 rounded-xl h-96 object-cover border-4 border-violet-600/20"
  />
</main>

<style>
  .bgradient {
    background: rgb(242, 211, 255);
    background: radial-gradient(
      circle,
      rgba(242, 211, 255, 1) 0%,
      rgba(255, 255, 255, 1) 50%
    );
  }
</style>
