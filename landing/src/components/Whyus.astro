---
interface Props {
  why: string;
}

const { why } = Astro.props;
---

<section
  class="flex justify-center w-full bg-gradient-to-br from-violet-500 to-violet-700 py-12"
>
  <div class="container flex flex-col items-center gap-6">
    <h2 class="text-2xl font-bold text-white">{why}</h2>
    <div
      class="w-full flex flex-col md:flex-row md:items-start justify-center gap-4"
    >
      <slot />
    </div>
  </div>
</section>
