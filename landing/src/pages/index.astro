---
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Paradox from "../components/Paradox.astro";
import Whyus from "../components/Whyus.astro";
import Layout from "../layouts/Layout.astro";
import CTA from "../components/CTA.astro";
import Footer from "../components/Footer.astro";
import WhyusCard from "../components/Whyus_card.astro";
import Click from "../icons/Click.astro";
import Info from "../icons/Info.astro";
import Trust from "../icons/Trust.astro";
import Repeat from "../icons/Repeat.astro";
---

<Layout title="Hello, this is Syncword" lang="en">
  <Header button="To the App" currentLang="en" />
  <Hero try="I want to try" login="Log In">
    <h1 class="text-3xl sm:text-4xl font-bold text-zinc-700 text-center">
      Master new
      <br />
       words
      <span
        class="bg-gradient-to-r from-purple-400 to-purple-600 text-transparent bg-clip-text"
      >
        faster
      </span>
    </h1>
    <h3 class="font-light sm:text-base text-sm text-zinc-600 text-center">
      <span
        class="bg-gradient-to-r font-medium from-purple-400 to-purple-600 text-transparent bg-clip-text"
        >Syncword</span
      > uses <span
        class="bg-gradient-to-r font-medium from-purple-400 to-purple-600 text-transparent bg-clip-text"
        >AI</span
      > to
      <br />
       make language learning easier
    </h3>
  </Hero>
  <Paradox
    image="en"
    title="A strange paradox… 😵‍💫"
    desc1="Remembering individual words is harder than learning through sentence examples. Examples help the brain retain information faster and for longer."
    desc2="This is exactly what we do at Syncword. We explain words through examples and show them in context."
  />
  <Whyus why="Why with us?">
    <div class="flex flex-col items-center justify-center gap-4">
      <WhyusCard
        title="All in one click:"
        desc="Enter a word, and we instantly show its translation and usage examples."
      >
        <Click size="32" strokeWidth={1.5} />
      </WhyusCard>
      <WhyusCard
        title="Convenient repetition:"
        desc="You can repeat words anytime, which helps to remember them better."
      >
        <Repeat size="32" strokeWidth={2} />
      </WhyusCard>
    </div>
    <div class="flex flex-col items-center justify-center gap-4">
      <WhyusCard
        title="Accurate translation:"
        desc="Our translations are created using powerful AI, much more accurate than regular translators."
      >
        <Trust size="32" strokeWidth={12} />
      </WhyusCard>
      <WhyusCard
        title="Only the necessary information:"
        desc="You will receive only the necessary information without unnecessary details."
      >
        <Info size="32" strokeWidth={5} />
      </WhyusCard>
    </div>
  </Whyus>
  <CTA
    title="Start learning now"
    desc1="The app is completely free, no trial period. One-click registration through Google!"
    button="I wanna try"
  />
  <Footer links="Author's social networks" />
</Layout>
